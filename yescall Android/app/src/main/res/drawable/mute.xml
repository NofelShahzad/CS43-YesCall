<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="150dp" />
            <stroke android:width="1dip" android:color="#79785e" />
            <gradient android:angle="-90" android:startColor="#decb26" android:endColor="#9a9868"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="150dp" />
            <stroke android:width="1dip" android:color="#f2e41f" />
            <solid android:color="#f2cf08"/>

        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="150dp" />
            <stroke android:width="1dip" android:color="#e9bf05" />
            <gradient android:angle="-90" android:startColor="#eadf0c" android:endColor="#fce302" />
        </shape>
    </item>

</selector>