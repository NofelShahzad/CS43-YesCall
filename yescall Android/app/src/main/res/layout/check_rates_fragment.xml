<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:gravity="center"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"

        android:layout_width="339dp"
        android:layout_height="494dp"
        android:layout_gravity="center"

        android:foregroundGravity="center"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="20dp"
        app:cardElevation="17dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">

            <com.hbb20.CountryCodePicker
                android:id="@+id/CountryCodePicker"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:ccp_contentColor="@android:color/holo_purple"
                app:ccp_defaultNameCode="GB"
                app:ccp_showFullName="true"
                app:ccp_showNameCode="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                />


            <androidx.cardview.widget.CardView
                android:id="@+id/maincontaner"
                android:layout_width="299dp"
                android:layout_height="402dp"
                android:layout_gravity="center"
                android:layout_weight="0.27"
                android:background="@android:color/white"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                android:stateListAnimator="@anim/enter_from_right"
                android:visibility="gone"
                app:cardElevation="7dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="401dp"
                    android:orientation="vertical"
                    android:weightSum="1"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="41dp"
                        android:orientation="horizontal"

                        >

                        <TextView
                            android:id="@+id/search_nearby"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="0.93"
                            android:background="@drawable/background_text_border"
                            android:padding="5dp"
                            android:text="Pakistan Cost Detail"
                            android:textAlignment="center"
                            android:textColor="@android:color/white"
                            android:textSize="24sp"
                            android:textStyle="bold|italic" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_layout"
                        android:elevation="10dp"
                        android:orientation="horizontal"
                        android:weightSum="1">


                        <LinearLayout
                            android:layout_width="108dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.27"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="0.01"
                                app:srcCompat="@drawable/phone" />

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="133dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="sans-serif"
                                android:text="Landline \n-/ Min"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="108dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.72"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/rate"
                                android:layout_width="133dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_marginTop="15dp"
                                android:fontFamily="sans-serif"
                                android:text="0.05"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="24sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/textView129"
                                android:layout_width="133dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="sans-serif"
                                android:padding="10dp"
                                android:text="$"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="24sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_layout"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="108dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.27"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/imageView30"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="0.68"
                                app:srcCompat="@drawable/phone2" />

                            <TextView
                                android:id="@+id/textView28"
                                android:layout_width="133dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="sans-serif"
                                android:text="Phone\n-/ Min"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="108dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.72"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/rate1"
                                android:layout_width="133dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_marginTop="15dp"
                                android:fontFamily="sans-serif"
                                android:text="0.05"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="24sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/textView229"
                                android:layout_width="133dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="sans-serif"
                                android:padding="10dp"
                                android:text="$"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="24sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="146dp"
                        android:background="@drawable/border_layout"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="108dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.27"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <ImageView
                                android:id="@+id/imageView23"
                                android:layout_width="match_parent"
                                android:layout_height="38dp"
                                android:layout_margin="10dp"
                                android:layout_weight="0.09"
                                app:srcCompat="@drawable/msg2" />

                            <TextView
                                android:id="@+id/textView22"
                                android:layout_width="133dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="sans-serif"
                                android:text="SMS \n-/ Min"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="18sp"
                                android:textStyle="bold|italic" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="108dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.72"
                            android:orientation="vertical"
                            android:weightSum="1">

                            <TextView
                                android:id="@+id/rate2"
                                android:layout_width="133dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_marginTop="15dp"
                                android:layout_weight="0.37"
                                android:fontFamily="sans-serif"
                                android:text="0.05"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="24sp"
                                android:textStyle="bold|italic" />

                            <TextView
                                android:id="@+id/textView21"
                                android:layout_width="133dp"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:fontFamily="sans-serif"
                                android:padding="10dp"
                                android:text="$"
                                android:textAlignment="center"
                                android:textColor="@android:color/black"
                                android:textSize="24sp"
                                android:textStyle="bold|italic"
                                android:layout_weight="0.24" />
                        </LinearLayout>


                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>